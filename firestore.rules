rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =============================================
    // HELPER FUNCTIONS (FOR PRODUCTION)
    // =============================================

    function isOficinaMember(oficinaId) {
      return request.auth != null && exists(/databases/$(database)/documents/oficinas/$(oficinaId)/users/$(request.auth.uid));
    }

    function isOficinaAdmin(oficinaId) {
      if (request.auth == null) {
        return false;
      }
      let userDoc = get(/databases/$(database)/documents/oficinas/$(oficinaId)/users/$(request.auth.uid));
      return userDoc.data != null && userDoc.data.role == 'ADMIN';
    }
    
    // =============================================
    // PRODUCTION RULES
    // =============================================
    
    // Publicly readable user mapping for login flow
    match /users/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for the workshop's own document.
    match /oficinas/{oficinaId} {
        allow get: if isOficinaMember(oficinaId) || oficinaId == 'dev-oficina-id';
        allow list: if false; // Never allow listing all workshops for security.
        allow create: if request.auth != null;
        allow update: if isOficinaAdmin(oficinaId) || oficinaId == 'dev-oficina-id';
    }
    
    // Rules for the users/mechanics within a workshop.
    match /oficinas/{oficinaId}/users/{userId} {
        allow get: if isOficinaMember(oficinaId) || oficinaId == 'dev-oficina-id';
        allow list: if oficinaId == 'dev-oficina-id' || request.auth != null; // Simple rule for LIST
        allow create: if isOficinaAdmin(oficinaId) || (request.auth != null && request.auth.uid == userId) || oficinaId == 'dev-oficina-id';
        allow delete: if isOficinaAdmin(oficinaId) || oficinaId == 'dev-oficina-id';
        allow update: if (isOficinaAdmin(oficinaId) || (request.auth != null && request.auth.uid == userId && request.resource.data.role == resource.data.role)) || oficinaId == 'dev-oficina-id';
    }

    // Rules for service orders.
    match /oficinas/{oficinaId}/ordensDeServico/{osId} {
        allow get, create, update: if isOficinaMember(oficinaId) || oficinaId == 'dev-oficina-id';
        allow list: if oficinaId == 'dev-oficina-id' || request.auth != null; // Simple rule for LIST
        allow delete: if (isOficinaMember(oficinaId) && resource.data.status != 'FINALIZADO') || oficinaId == 'dev-oficina-id';
    }
    
    // Rules for inventory.
    match /oficinas/{oficinaId}/inventory/{itemId} {
        allow get, create, update, delete: if isOficinaMember(oficinaId) || oficinaId == 'dev-oficina-id';
        allow list: if oficinaId == 'dev-oficina-id' || request.auth != null; // Simple rule for LIST
    }

    // Rules for financial transactions.
    match /oficinas/{oficinaId}/financialTransactions/{transactionId} {
        allow get, write: if isOficinaAdmin(oficinaId) || oficinaId == 'dev-oficina-id';
        // Simple rule for LIST that works with queries. UI should enforce admin role.
        allow list: if oficinaId == 'dev-oficina-id' || request.auth != null;
    }
    
    // Rules for vehicle history.
    match /oficinas/{oficinaId}/vehicleHistory/{historyId} {
      allow read, write: if isOficinaMember(oficinaId) || oficinaId == 'dev-oficina-id';
    }
    
    // Counters are an internal mechanism modified within transactions by members.
    match /oficinas/{oficinaId}/counters/{counterId} {
      allow read, write: if isOficinaMember(oficinaId) || oficinaId == 'dev-oficina-id';
    }

    // Workshop-specific config can only be managed by admins.
     match /oficinas/{oficinaId}/config/{configId} {
      allow read, write: if isOficinaAdmin(oficinaId) || oficinaId == 'dev-oficina-id';
    }
  }
}
